<resources>
    <!-- Base application theme -->
    <style name="Theme.MiPrimerAplicacion" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">#96C0FA</item>
        <item name="colorPrimaryVariant">#96C0FA</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand colors -->
        <item name="colorSecondary">#96C0FA</item>
        <item name="colorSecondaryVariant">#96C0FA</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- ActionBar style -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">#96C0FA</item>
        <item name="titleTextColor">@color/white</item>
    </style>
</resources>